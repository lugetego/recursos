<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Solicitud de recursos- Prácticas Escolares{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

        {% endblock %}
    </head>
    <body>

    <nav class="navbar navbar-expand-lg ">
        <div class="container-fluid">
            <a class="navbar-brand" href="https://www.unam.mx">
                <img src="{{ asset('images/unam.png') }}" alt="UNAM" height="60">
            </a>
            <a class="navbar-brand" href="https://www.matmor.unam.mx.mx">
                <img src="{{ asset('images/ccm.png') }}" alt="CCM" height="60">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {% block nav %}
                       <div class="dropdown">
                         {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('logout') }}">Cerrar sesión</a>
                            </li>
                        {% endif %}
                    {% endblock %}
                </ul>
            </div>
        </div>
    </nav>

        {% block body %}{% endblock %}

    {% block footer %}
        <footer id="footer">
            <div class="container">

                <p class="copy-right text-center text-light mt-5">© 2025 Centro de Ciencias Matemáticas<br>
                    Universidad Nacional Autónoma de México, Campus Morelia<br>
                </p>
            </div>
        </footer>
    {% endblock %}

    </body>
</html>
